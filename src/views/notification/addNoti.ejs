<form action="/notification/insert" method="POST"  enctype="multipart/form-data">
  

  <div class="row form-group mb-4">
    <div class="col">
      <label style="margin: 5px;" for="lastName">Tiêu đề</label>
      <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      value=""
      placeholder="Tiêu đề"
      required
    />
    </div>
    <div class="col">
      <label style="margin: 5px;" for="lastName">Nội dung</label>
      <input
      type="text"
      class="form-control"
      id="body"
      name="body"
      value=""
      placeholder="Nội dung"
      required
    />
    </div>
  </div>

  <div class="row form-group mb-4">
   

    <div class="col">
        <label style="margin: 5px;" for="lastName">Hình ảnh</label>
        <input
          type="file"
          class="form-control"
          id="image"
          name="image"
          value=""
          placeholder="Image"
          required
        />
      </div>
  </div>
 

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Xác nhận</button>
  </div>
</form>
