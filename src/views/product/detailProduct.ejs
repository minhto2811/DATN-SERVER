    <div class="row form-group mb-4">
        <div class="col">
          <label for="product_name">Hình ảnh:</label>
          <input type="file" class="form-control" name="image" id="image"  onchange="showPreviewImage(event)" >
        </div>
      </div>

    <div class="row form-group mb-4">

        <div class="col">
            <label for="product_type">Chọn hãng:</label>
            <select class="form-select" id="brand_id" name="brand_id">
                <% for(let i=0; i < brand.length; i++) { %>
                    <option value="<%=brand[i]._id%>" <%=brand[i]._id==product.brand_id ? 'selected' :'' %> ><%=
                            brand[i].brand %>
                    </option>
                    <% } %>
            </select>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">Tên sản phẩm</label>
            <input type="text" class="form-control" id="product_name" name="product_name"
                value="<%= product.product_name %>" placeholder="Product Name" required />
        </div>
    </div>


    <div class="row form-group mb-4" style="padding-bottom: 10px;">


        <div class="col">
            <label for="tel">Giảm giá(%):</label>
            <input type="number" step="1" class="form-control" id="percent_discount" name="percent_discount"
                value="<%=product.percent_discount%>" placeholder="Giảm giá" required />
        </div>
    </div>
    <input type="text" id="img" name="img" value="<%= product.image %>" hidden>

        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary">Xác nhận</button>
          </div>

</form>









