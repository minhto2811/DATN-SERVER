<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

  <h1 class="h2">Sản phẩm</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/product">Sản phẩm</a></li>
          <li class="breadcrumb-item active">sản phẩm mới</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">

    </div>
  </div>
</div>

<form action="/product/add" method="POST" enctype="multipart/form-data">

  <div class="row form-group mb-4">

    <div class="col">
      <label for="product_type_id">Chọn loại:</label>
      <select class="form-select"  id="product_type_id" name="product_type_id">
        <% for(let i=0; i < type.length; i++) { %>
          <option value="<%=type[i]._id%>"><%= type[i].name %></option>
        <% } %>
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">

      <label for="product_name">Tên sản phẩm:</label>
      <input class="form-control" type="text" id="product_name" name="product_name" required>
    </div>
  </div>

  <div class="row form-group mb-4">

    <div class="col">
      <label for="brand_id">Chọn hãng:</label>
      <select class="form-select"  id="brand_id" name="brand_id">
        <% for(let i=0; i < brand.length; i++) { %>
          <option value="<%=brand[i]._id%>"><%= brand[i].brand %></option>
        <% } %>
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="percent_discount">Giảm giá(%):</label>
      <input class="form-control" type="number" step="1" id="percent_discount" name="percent_discount" value="0"
        required>
    </div>

  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="product_name">Hình ảnh:</label>
      <input type="file" class="form-control" name="image" id="image" onchange="showPreviewImage(event)" required>
    </div>
  </div>


  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
  </div>
</form>