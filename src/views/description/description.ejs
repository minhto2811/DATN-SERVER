<form action="/product/description/<%=id_follow%>" method="POST" enctype="multipart/form-data">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="title">Title:</label>
            <input class="form-control" type="text" id="title" name="title">
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="description">Description:</label>
            <input class="form-control" type="text" id="description" name="description">

        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <img id="preview-image" style="display: none;height: 100px;width: 100px;" />
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="image">Image:</label>
            <input class="form-control" type="file" id="image" name="image" accept="image/*"
                onchange="showPreviewImage(event)">
        </div>
    </div>



    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add description</button>
    </div>
</form>



<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>

        <tbody>
            <% for (let description of descriptions) {%>
                <tr class="align-middle">
                    <td >
                        <% if (description.title) { %>
                            <%= description.title %>
                                <% } else { %>
                                    Trống
                                    <% } %>
                    </td>
                    <td >
                        <% if (description.description) { %>
                            <%= description.description %>
                                <% } else { %>
                                    Trống
                                    <% } %>

                    </td>
                    <td>
                        <% if (description.image) { %>
                            <img src="<%= description.image %>" style="height: 30px; width: 50px;" />
                            <% } else { %>
                                Trống
                                <% } %>
                    </td>

                    <td class="text-end">

                        <div class="d-flex flex-row justify-content-end gap-2">
                            <div>
                                <button type="button" class="btn btn-danger btn-small" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal" data-bs-id="<%=description._id%>"> <i
                                        class="bi bi-trash"></i></button>
                            </div>
                        </div>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>