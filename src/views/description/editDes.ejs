<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Product description</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
      
      </div>
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/product/description/<%=data.id_follow%>">Description</a></li>
            <li class="breadcrumb-item active">Edit description</li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Description</b>
      </div>
    </div>
  </div>

  <form action="/product/description/edit" method="POST" enctype="multipart/form-data">
  
    <div class="row form-group mb-4">
      <div class="col">
        <img id="preview-image" style="display: none;height: 100px;width: 100px;" />
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="product_name">Hình ảnh:</label>
        <input type="file" class="form-control" name="image" id="image" onchange="showPreviewImage(event)" >
      </div>
    </div>
  
    <div class="row form-group mb-4">
  
      <div class="col">
        <label for="color">Title:</label>
        <input class="form-control" type="text" id="title" name="title" value="<%= data.title %>" required>
  
      </div>
    </div>
  
        <div class="row form-group mb-4">
          <div class="col">
            <label for="quantity">Description:</label>
            <input class="form-control" type="text" id="description" name="description" value="<%= data.description %>" required>
          </div>
        </div>

        <input type="text" id="_id" name="_id" value="<%= data._id %>" hidden>
        <input type="text" id="img" name="img" value="<%= data.image %>" hidden>
        <input type="text" id="productId" name="productId" value="<%= data.id_follow%>" hidden>

        <div class="form-group mb-4">
          <button type="submit" class="btn btn-primary">Edit Description</button>
        </div>
  </form>